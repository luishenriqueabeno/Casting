@using Casting.Domain.enums
@model Casting.Web.Mvc.Controllers.ViewModels.CandidatoViewModel

@{
    ViewBag.Title = "DadosBancarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="maincontent">

    <div class="left">
		
        <div class="etapas">
            <ul class="meus_dados">
                <li class="etapa1 ok"></li>
                <li class="etapa2 ok"></li>
                <li class="etapa3 ok"></li>
                <li class="etapa4 ok"></li>
                <li class="etapa5 on"></li>
            </ul>
            <div class="clear"></div>
        </div>   
            
        <div class="clear"></div>
		
        @using (Html.BeginForm("GravaDadosBancarios", "Cadastro", null, FormMethod.Post, new { @class = "formPost" }))
        {
            <div class="form_default">
                <fieldset>
                @Html.HiddenFor(x => x.Id)
                    <legend>Dados Bancários</legend>    
					
					
                    <p class="first">
                        <label>Titular da Conta: </label>
                        @Html.TextBoxFor(x => x.TitularContaBancaria, new {@class = "por_cent"})
                    </p>
					
                    <p class="fl">
                        <label>Nome do banco: </label>
                        <select class="mf" name="banco">
                        @foreach(var banco in Model.BancoList)
                        {
                            
                            if (banco == Model.Banco)
                            {
                                <option selected="selected">@banco.Nome</option>
                            }
                            else
                            {
                                <option>@banco.Nome</option>   
                            }
                        }
                        </select>
                    </p>
					
                    <p class="fl">                    	
                        <label style="margin-bottom: 10px;">Tipo de Conta:  </label>					
						
                        <span class="fl">
                            <label>@Html.RadioButtonFor(x => x.TipoConta, "ContaCorrente", Model.TipoConta == TipoConta.ContaCorrente ? (new { @checked = "checked" }) : null) Corrente </label>
                        </span>
                        <span class="fl">
                            <label>@Html.RadioButtonFor(x => x.TipoConta, "ContaPoupanca", Model.TipoConta == TipoConta.ContaPoupanca ? (new { @checked = "checked" }) : null) Poupança</label>
                        </span>
                        <div class="clear"></div>
						
                    </p>
					
                    <p>
                        <span class="fl">
                            <label>Agência: </label>
                            @Html.TextBoxFor(x => x.Agencia, new { @class = "pppf" })
							
                        </span>
                        <span class="fl">
                            <label>Conta Corrente: </label>
                            @Html.TextBoxFor(x => x.ContaCorrente, new { @class = "sf" })
                        </span>
                    </p>
					
                    <div class="clear"></div>					
					
                    <!-- BOTÕES -->
                    <p style="padding-left: 516px; margin-top: 10px;">
                        <a href="@Url.Action("Caracteristicas", "Cadastro")" class="iconlink3 mg_rt fl"><img src="@Url.Content("~/Content/images/cafe/icons/small/black/left.png")" class="mgright5" alt=""> <span>Voltar</span></a> 
                        <a href="#" id="submitForm" class="iconlink4 fl"><img src="@Url.Content("~/Content/images/cafe/icons/small/white/right.png")" class="mgright5" alt=""> <span>Próxima Etapa</span></a>
                        <div class="clear"></div>
                    </p>
                    <!-- BOTÕES - END -->
                    
                    <div class="clear"></div>

                </fieldset>
            </div>
            <!--form-->
        }   		       	
		
        <div class="clear"></div>			
        <br />
					
    </div><!-- left -->            

    <br clear="all" />
    
</div>

<script type="text/javascript">
    jQuery(document).ready(function () {
        jQuery('#submitForm').click(function () {
            jQuery('.formPost').submit();
        });
    });
</script>