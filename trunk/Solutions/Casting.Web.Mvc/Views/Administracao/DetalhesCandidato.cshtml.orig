                    <colgroup>
                        <col width="25%">
                        <col width="75%">
                    </colgroup>
                    <thead>
                        <tr>
                            <td colspan="2"><h4 class="fl">DADOS PESSOAIS </h4>
										
                                <div class="btn_acao fr" id="btn_responder_tp">
                                    <a href="@Url.Action("DadosPessoais", "Cadastro", new { idCandidato = Model.Id })">
                                        <img src="@Url.Content("~/Content/images/icons/small/black/edit.png")" class="mgright5" alt="">							
                                        <input type="submit"  value="Editar" /> 	
                                    </a>
                                </div>
									
                            </td>
                        </tr>
                    </thead>
                    <tbody>                    	
                        <tr>
                            <td>Nome:</td> 
                            <td>@Model.Nome</td>
                        </tr>
								
                        <tr>
                            <td>CPF:</td> 
                            <td>@Model.Cpf</td>
                        </tr>
																
                        <tr>
                            <td>RG:</td> 
                            <td>@Model.Rg</td>
                        </tr>
								
                        <tr>
                            <td>Data de Nascimento:</td> 
                            <td>@Model.DataNascimento</td>
                        </tr>
								
                        <tr>
                            <td>Nome do Pai:</td> 
                            <td>@Model.NomeDoPai</td>
                        </tr>
								
                        <tr>
                            <td>Nome da Mãe:</td> 
                            <td>@Model.NomeDaMae</td>
                        </tr>
								
                        <tr>
                            <td>Endereço:</td> 
                            <td>@Model.Endereco</td>
                        </tr>
								
								
                        <tr>
                            <td>Número:</td> 
                            <td>@Model.Numero</td>
                        </tr>
								
								
                        <tr>
                            <td>Complemento:</td> 
                            <td>@Model.Complemento</td>
                        </tr>
								
								
                        <tr>
                            <td>Bairro:</td> 
                            <td>@Model.Bairro</td>
                        </tr>
								
                        <tr>
                            <td>Cidade:</td> 
                            <td>@Model.Cidade</td>
                        </tr>
								
                        <tr>
                            <td>UF:</td> 
                            <td>@Model.Estado</td>
                        </tr>
								
                        <tr>
                            <td>CEP:</td> 
                            <td>@Model.CEP</td>
                        </tr>
						
                        <tr>
                            <td>Região:</td> 
                            <td>@Model.Regiao.ToString()</td>
                        </tr>
								
                        <tr>
                            <td>Telefone residencial:</td> 
                            <td>@Model.TelefoneResidencial</td>
                        </tr>
								
                        <tr>
                            <td>Telefone recado:</td> 
                            <td>@Model.TelefoneRecado</td>
                        </tr>
								
                        <tr>
                            <td>Telefone celular:</td> 
                            <td>@Model.TelefoneCelular</td>
                        </tr>
								
                        <tr>
                            <td>Telefone comercial:</td> 
                            <td>@Model.TelefoneComercial</td>
                        </tr>
								
                        <tr>
                            <td>E-mail:</td> 
                            <td>@Model.Email</td>
                        </tr>
								
                    </tbody>
                </table>
                <!-- DADOS PESSOAIS - END -->
						
                <!-- DOCUMENTOS -->
                <table cellpadding="0" cellspacing="0" class="tabela_curriculo" width="100%">
                    <colgroup>
                        <col width="25%">
                        <col width="75%">
                    </colgroup>
                    <thead>
                        <tr>
                            <td colspan="2">
									
                                <h4 class="fl">DOCUMENTOS</h4>
										
                                <div class="btn_acao fr" id="btn_responder_tp">
                                    <a href="@Url.Action("Documentos", "Cadastro", new { idCandidato = Model.Id })">
                                        <img src="@Url.Content("~/Content/images/icons/small/black/edit.png")" class="mgright5" alt="">							
                                        <input type="submit"  value="Editar" /> 	
                                    </a>
                                </div>
									
                            </td>
                        </tr>
                    </thead>
                    <tbody>                    	
                        <tr>
                            <td>RG:</td> 
                            <td>@Model.Rg</td>
                        </tr>
								
                        <tr>
                            <td>Estado de emissão:</td> 
                            <td>@Model.UfExpedicaoRg</td>
                        </tr>
								
                        <tr>
                            <td>Data de emissão:</td> 
                            <td>@Model.DataExpedicaoRg</td>
                        </tr>
								
                        <tr>
                            <td>CPF:</td> 
                            <td>@Model.Cpf</td>
                        </tr>
								
                        <tr>
                            <td>Carteira de Trabalho:</td> 
                            <td>@Model.CarteiraTrabNumero</td>
                        </tr>
								
                        <tr>
                            <td>Série:</td> 
                            <td>@Model.CarteiraTrabSerie</td>
                        </tr>
								
                        <tr>
                            <td>Estado:</td> 
                            <td>@Model.CarteiraTrabUf</td>
                        </tr>
								
                        <tr>
                            <td>PIS/PASEP:</td> 
                            <td>@Model.PisNumero</td>
                        </tr>
								
                        <tr>
                            <td>Data de emissão:</td> 
                            <td>@Model.PisDataEmissao</td>
                        </tr>
								
                        <tr>
                            <td>Nº Cart. Nac. Habilitação:</td> 
                            <td>@Model.HabilitacaoNumero</td>
                        </tr>
								
                        <tr>
                            <td>Categoria da CNH:</td> 
                            <td>@Model.HabilitacaoCategoria</td>
                        </tr>
								
                        <tr>
                            <td>Possui veículo? </td> 
                            <td>
                                @{
                                    var possuiVeiculo = "Não";
                                    if (Model.PossuiVeiculo)
                                    {
                                        possuiVeiculo = "Sim " + ((@Model.TipoVeiculo == TipoVeiculo.Nenhum) ? "" : " - " + @Model.TipoVeiculo);


                                    }
                                }
                                @possuiVeiculo
                            </td>
                        </tr>
								
                    </tbody>
                </table>
                <!-- DOCUMENTOS - END -->
						
                <!-- INFORMAÇÕES GERAIS -->
                <table cellpadding="0" cellspacing="0" class="tabela_curriculo" width="100%">
                    <colgroup>
                        <col width="25%">
                        <col width="75%">
                    </colgroup>
                    <thead>
                        <tr>
                            <td colspan="2">
									
                                <h4 class="fl">INFORMAÇÕES GERAIS </h4>
										
                                <div class="btn_acao fr" id="btn_responder_tp">
                                    <a href="@Url.Action("InformacoesGerais", "Cadastro", new { idCandidato = Model.Id })">
                                        <img src="@Url.Content("~/Content/images/icons/small/black/edit.png")" class="mgright5" alt="">							
                                        <input type="submit"  value="Editar" /> 	
                                    </a>
                                </div>
									
                            </td>
                        </tr>
                    </thead>
                    <tbody>                    	
                        <tr>
                            <td>Sexo:</td> 
                            <td>@Model.Sexo</td>
                        </tr>
								
                        <tr>
                            <td>Tem filhos?</td> 
                            <td>@{
                                var possuiFilhos = "Não";
                                if (Model.PossuiFilhos)
                                {

                                    possuiFilhos = "Sim - " + Model.QtdeFilhos + ((Model.QtdeFilhos == 1) ? " filho" : " filhos");

                                }
                                }

                                @possuiFilhos
                            </td>
                        </tr>
								
                        <tr>
                            <td>Estado Civil:</td> 
                            <td>@Model.EstadoCivil</td>
                        </tr>
								
                        <tr>
                            <td>Natural de (Cidade):</td> 
                            <td>@Model.NaturalidadeCidade</td>
                        </tr>
								
                        <tr>
                            <td>Natural de (UF):</td> 
                            <td>@Model.NaturalidadeUf</td>
                        </tr>
								
                        <tr>
                            <td>Nacionalidade:</td> 
                            <td>@Model.Nacionalidade</td>
                        </tr>
								
                        <tr>
                            <td>Como ficou sabendo da Vaga:</td> 
                            <td>@Model.ComoFicouSabendoDaVaga</td>
                        </tr>

                        <tr>
                            <td>Cargo pretendido:</td> 
                            <td>@Model.CargoPretendido</td>
                        </tr>
								
                        <tr>
                            <td>Último salário:</td> 
                            <td>@Model.UltimoSalario</td>
                        </tr>
								
                        <tr>
                            <td>Pretensão salarial:</td> 
                            <td>@Model.PretensaoSalarial</td>
                        </tr>								
                    </tbody>
                </table>
                <!-- INFORMAÇÕES GERAIS - END -->
						
						
                <!-- CARACTERÍSTICAS -->
                <table cellpadding="0" cellspacing="0" class="tabela_curriculo" width="100%">
                    <colgroup>
                        <col width="25%">
                        <col width="75%">
                    </colgroup>
                    <thead>
                        <tr>
                            <td colspan="2">
									
                                <h4 class="fl">CARACTERÍSTICAS</h4>
										
                                <div class="btn_acao fr" id="btn_responder_tp">
                                    <a href="@Url.Action("Caracteristicas", "Cadastro", new { idCandidato = Model.Id })">
                                        <img src="@Url.Content("~/Content/images/icons/small/black/edit.png")" class="mgright5" alt="">							
                                        <input type="submit"  value="Editar" /> 	
                                    </a>
                                </div>
									
                            </td>
                        </tr>
                    </thead>
                    <tbody>                    	
                        <tr>
                            <td>Manequim:</td> 
                            <td>@Model.Manequim</td>
                        </tr>
								
                        <tr>
                            <td>Altura:</td> 
                            <td>@Model.Altura</td>
                        </tr>
								
                        <tr>
                            <td>Peso:</td> 
                            <td>@Model.Peso</td>
                        </tr>
								
                        <tr>
                            <td>Calçado:</td> 
                            <td>@Model.Calcado</td>
                        </tr>
								
                        <tr>
                            <td>Cor dos olhos:</td> 
                            <td>@Model.CorDosOlhos</td>
                        </tr>
								
                        <tr>
                            <td>Cor dos cabelos:</td> 
                            <td>@Model.CorDoCabelo</td>
                        </tr>
								
                        <tr>
                            <td>Cor da pele:</td> 
                            <td>@Model.CorDaPele.ToString()</td>
                        </tr>	
                    </tbody>
                </table>
                <!-- CARACTERÍSTICAS - END-->
						
                <!-- DADOS BANCÁRIOS -->
                <table cellpadding="0" cellspacing="0" class="tabela_curriculo" width="100%">
                    <colgroup>
                        <col width="25%">
                        <col width="75%">
                    </colgroup>
                    <thead>
                        <tr>
                            <td colspan="2">
									
                                <h4 class="fl">DADOS BANCÁRIOS </h4>
										
                                <div class="btn_acao fr" id="btn_responder_tp">
                                    <a href="@Url.Action("DadosBancarios", "Cadastro", new { idCandidato = Model.Id })">
                                        <img src="@Url.Content("~/Content/images/icons/small/black/edit.png")" class="mgright5" alt="">							
                                        <input type="submit"  value="Editar" /> 	
                                    </a>
                                </div>
									
                            </td>
                        </tr>
                    </thead>
                    <tbody>                    	
                        <tr>
                            <td>Titular da Conta:</td> 
                            <td>@Model.TitularContaBancaria</td>
                        </tr>
								
                        <tr>
                            <td>Nome do banco:</td> 
                            <td>@if (Model.Banco != null)
                                {
                                @Model.Banco.Nome
                                }
                            </td>
                        </tr>
								
                        <tr>
                            <td>Tipo de Conta:</td> 
                            <td>
                                @{
                                    var tipoConta = (Model.TipoConta == TipoConta.ContaCorrente) ? "Conta Corrente" : "Conta Poupança";
                                }
                                @tipoConta
                            </td>
                        </tr>
								
                        <tr>
                            <td>Agência:</td> 
                            <td>@Model.Agencia</td>
                        </tr>
								
                        <tr>
                            <td>Conta Corrente:</td> 
                            <td>@Model.ContaCorrente</td>
                        </tr>
								
                    </tbody>
                </table>
                <!-- DADOS BANCÁRIOS - END-->
                <div class="clear"></div>
					
            </div>
            <!-- MEUS DADOS - END -->
			
            <!-- FORMAÇÃO -->
            <div class="content content_close">	
			
                <div class="seta"></div>
				
                <h3>Formação</h3>			
				
							
                <!-- ESCOLARIDADE -->
                <table cellpadding="0" cellspacing="0" class="tabela_curriculo" width="100%">
                    <colgroup>
                        <col width="25%">
                        <col width="75%">
                    </colgroup>
                    <thead>
                        <tr>
                            <td colspan="2">
							
                                <h4 class="fl">ESCOLARIDADE </h4>
										
                                <div class="btn_acao fr" id="btn_responder_tp">
                                    <a href="@Url.Action("Escolaridade", "Cadastro", new { idCandidato = Model.Id })">
                                        <img src="@Url.Content("~/Content/images/icons/small/black/edit.png")" class="mgright5" alt="">							
                                        <input type="submit"  value="Editar" /> 	
                                    </a>
                                </div>
							
                            </td>
                        </tr>
                    </thead>
                    <tbody>                    	
                        <tr>
                            <td>
                                @if (@Model.Escolaridade == 0)
                                {
                                    var escolaridade = "Nada Cadastrado";
                                    @escolaridade
                                }
                                else
                                {
                                    Escolaridade esc = Model.Escolaridade;
                                    var escolaridade = "";
                                    switch (esc)
                                    {
                                        case Escolaridade.EnsinoFundamentalIncompleto:
                                            escolaridade = "Ensino Fundamental Incompleto";
                                            break;
                                        case Escolaridade.EnsinoFundamentalCompleto:
                                            escolaridade = "Ensino Fundamental Completo";
                                            break;
                                        case Escolaridade.EnsinoMedioIncompleto:
                                            escolaridade = "Ensino Fundamental Incompleto";
                                            break;
                                        case Escolaridade.EnsinoMedioCompleto:
                                            escolaridade = "Ensino Médio Completo";
                                            break;
                                        case Escolaridade.EnsinoSuperiorIncompleto:
                                            escolaridade = "Ensino Superior Incompleto";
                                            break;
                                        case Escolaridade.EnsinoSuperiorCompleto:
                                            escolaridade = "Ensino Superior Completo";
                                            break;
                                        case Escolaridade.PosGraduaçãoIncompleta:
                                            escolaridade = "Pós Graduação Incompleta";
                                            break;
                                        case Escolaridade.PosGraduaçãoCompleta:
                                            escolaridade = "Pós Graduação Completa";
                                            break;
                                        case Escolaridade.CursoTecnico:
                                            escolaridade = "Curso Técnico";
                                            break;
                                    }
                                    @escolaridade
                                }
                            </td> 

                            <td>
                                @if (@Model.Escolaridade == Escolaridade.EnsinoSuperiorIncompleto)
                                {
                                    @Model.NomeDoCursoSupIncompleto
                                }
                                else if (@Model.Escolaridade == Escolaridade.EnsinoSuperiorCompleto)
                                {
                                    @Model.NomeDoCursoSup
                                    if (Model.AnoConclusao != null && Model.AnoConclusao != 0)
                                    {
                                        var ano = " - Concluído em: " + Model.AnoConclusao;

                                        @ano
                                    }
                                }
                                else if (@Model.Escolaridade == Escolaridade.CursoTecnico)
                                {
                                    @Model.NomeDoCursoTecnico
                                }
                            </td>
                            
                        </tr>
						
                    </tbody>
                </table>
                <!-- ESCOLARIDADE - END-->
				
                <!-- INFORMÁTICA -->
                <table cellpadding="0" cellspacing="0" class="tabela_curriculo" width="100%">
                    <colgroup>
                        <col width="25%">
                        <col width="75%">
                    </colgroup>
                    <thead>
                        <tr>
                            <td colspan="2">
							
                                <h4 class="fl">INFORMÁTICA</h4>
										
                                <div class="btn_acao fr" id="btn_responder_tp">
                                    <a href="@Url.Action("Informatica", "Cadastro", new { idCandidato = Model.Id })">
                                        <img src="@Url.Content("~/Content/images/icons/small/black/edit.png")" class="mgright5" alt="">							
                                        <input type="submit"  value="Editar" /> 	
                                    </a>
                                </div>
							
                            </td>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.ConhecimentoWord)
                        {
                            <tr>
                                <td>Word:</td> 
                                <td>@Model.WordNivelConhecimento</td>
                            </tr>
                        }                   	

                        @if (Model.ConhecimentoExcel)
                        {
                            <tr>
                                <td>Excel:</td> 
                                <td>@Model.ExcelNivelConhecimento</td>
                            </tr>
                        }   
						
                        @if (Model.ConhecimentoPowerPoint)
                        {
                            <tr>
                                <td>Power Point:</td> 
                                <td>@Model.PowerPointNivelConhecimento</td>
                            </tr>
                        }   
                        
                        @if (Model.ConhecimentoAccess)
                        {
                            <tr>
                                <td>Access:</td> 
                                <td>@Model.AccessNivelConhecimento</td>
                            </tr>
                        }   

                        @if (Model.ConhecimentoInternet)
                        {
                            <tr>
                                <td>Internet:</td> 
                                <td>@Model.InternetNivelConhecimento</td>
                            </tr>
                        }   

                        @if (Model.ConhecimentoOutlook)
                        {
                            <tr>
                                <td>Outlook:</td> 
                                <td>@Model.OutlookNivelConhecimento</td>
                            </tr>
                        }   


                        @if (!string.IsNullOrEmpty(Model.OutrosConhecimentos))
                        {
                            <tr>
                                <td>Outros Conhecimentos:</td> 
                                <td>@Model.OutrosConhecimentos</td>
                            </tr>
                        }  
                    </tbody>
                </table>
                <!-- INFORMÁTICA - END-->
				
                <!-- IDIOMAS -->
                <table cellpadding="0" cellspacing="0" class="tabela_curriculo" width="100%">
                    <colgroup>
                        <col width="25%">
                        <col width="75%">
                    </colgroup>
                    <thead>
                        <tr>
                            <td colspan="2">
							
                                <h4 class="fl">IDIOMAS </h4>
										
                                <div class="btn_acao fr" id="btn_responder_tp">
                                    <a href="@Url.Action("Idiomas", "Cadastro", new { idCandidato = Model.Id })">
                                        <img src="@Url.Content("~/Content/images/icons/small/black/edit.png")" class="mgright5" alt="">							
                                        <input type="submit"  value="Editar" /> 	
                                    </a>
                                </div>
							
                            </td>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.PossuiIngles)
                        {
                            <tr>
                                <td>Inglês:</td> 
                                <td>@Model.InglesNivelConhecimento</td>
                            </tr>
                        }
                        
                        @if (!string.IsNullOrEmpty(Model.Idioma2Nome))
                        {
                            <tr>
                                <td>@Model.Idioma2Nome</td> 
                                <td>@Model.Idioma2NivelConhecimento</td>
                            </tr>
                        }
                        
                        @if (!string.IsNullOrEmpty(Model.Idioma3Nome))
