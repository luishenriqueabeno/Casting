@using Casting.Domain.enums
@model Casting.Web.Mvc.Controllers.ViewModels.CandidatoViewModel
@{
    ViewBag.Title = "CURRÍCULO DO CANDIDATO";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="maincontent">

    <div class="left">

        <!-- Cont Paper -->
        <div class="cont_curriculo">
		
            <div class="topo">
                <div class="fl">
                    <h1> CURRÍCULO DO CANDIDATO </h1>
                </div>
				
                <div class="fr mg_rt">
                    <ul>
                        <li><p><span style="color:#929292; margin-right:5px;">Última atualização em:</span> @Model.DataAlteracao</p></li>
						<li>
							<div class="btn_acao" id="btn_responder_tp">
									<img src="@Url.Content("/Content/images/icons/small/black/print.png")" class="mgright5" alt="">							
									<a href="@Url.Action("Relatorio", "Administracao", new { idCandidato = @Model.Id })"><input type="submit"  value="Imprimir" /> </a>				
							</div>
						</li>
						
                        <li style="margin-left:-11px;">
                            <div class="btn_acao" id="cmdAgendarEntrevista">
                                <img src="@Url.Content("/Content/images/icons/small/black/calendar.png")" class="mgright5" alt="">							
                                <a href="#agendamento" class="inline"><input type="submit"  value="Agendar Entrevista" /> </a>				
                            </div>
                        </li>
						
						<li style="margin-left:-11px;">											
							<div class="btn_acao">
                                     <a href="@Url.Action("AvaliacaoAparencia", "Administracao", new { idCandidato = @Model.Id })">
									<img src="@Url.Content("/Content/images/icons/small/black/star.png")" class="mgright5" alt="">							
									<input type="submit"  value="Avaliar" /> 	
                                    </a>			
							</div>
						</li>
                    </ul>
                </div>		
                <div class="clear"></div>
            </div>
			
            <div class="content">
				
                @{
                    string imagemCandidato = string.IsNullOrEmpty(Model.FotoRosto) ?
                        string.IsNullOrEmpty(Model.FotoCorpoFrente) ?
                        "" : Url.Content("/Content/uploads/fotosCandidatos/" + Model.FotoCorpoFrente)
                                : Url.Content("/Content/uploads/fotosCandidatos/" + Model.FotoRosto);
                }
                
                <img src="@imagemCandidato" alt="" class="img_border fl" width="200" height="200" />
                <div class="dados fl">
				    @Html.HiddenFor(x => x.Id)
                    <h2>@Model.Nome</h2>
					
                    <p>
                        <label>Idade:</label>	
                        <label> @Model.Idade</label>	
                        <div class="clear"></div>
                    </p>
					
                    <p>
                        <label>Telefone:</label>	
                        <label>
                            @if (Model.TelefoneCelular != "")
                            {
                                @Model.TelefoneCelular
                            }
                            else if (Model.TelefoneResidencial != "")
                            {
                                @Model.TelefoneResidencial
                            }
                            else if (Model.TelefoneComercial != "")
                            {
                                @Model.TelefoneComercial
                            }
                            else
                            {
                                @Model.TelefoneRecado
                            }
                        </label>
                        <div class="clear"></div>						
                    </p>
					
                    <p>
                        <label>E-mail:</label>	
                        <label>@Model.Email</label>	
                        <div class="clear"></div>
                    </p>
					
                    <p>
                        <label>Mora em:</label>	
                        <label>@Model.Endereco</label>	
                        <div class="clear"></div>
                    </p>
                    
                    <p>
                        <label>Situação:</label>
                        <label>
                            <span id="SituacaoAtual">@Model.SituacaoCandidato.Nome</span> - <a class="inline cboxElement" href="#situacao">Editar</a>
                        </label>	
                        <div class="clear"></div>
                    </p>

					@if (Model.EntrevistaAgendada != null)
                    {
                    <p >
                        <label>Data da Entrevista:</label>
                        <label>
                            <span id="entrevistaData">@Model.EntrevistaAgendada.DataEntrevista.ToShortDateString()  @Model.EntrevistaAgendada.HorarioEntrevista</span>
                        </label>	
                        <div class="clear"></div>
                    </p>
                    }else
                    {
                        <div id="entrevistaData"></div>
                    }

                </div>
				
                <div class="clear" style="height:0px; margin-bottom:-5px; padding:0px;"></div>
				
            </div>
			
            <!-- MEUS DADOS -->
            <div class="content content_close">
				
                <div class="seta"></div>
				
                <h3>Meus dados</h3>				
				
                <!-- DADOS PESSOAIS -->
