@using Casting.Domain.enums
@model Casting.Web.Mvc.Controllers.ViewModels.CandidatoViewModel

@{
    ViewBag.Title = "ExperienciaProfissional";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="maincontent">

    <div class="left">
		
        <div class="etapas">
            <ul class="exp_prof">
                <li class="etapa1 ok"></li>
                <li class="etapa2 ok"></li>
                <li class="etapa3 on"></li>
            </ul>
            <div class="clear"></div>
        </div>   
            
        <div class="clear"></div>
		
        @using (Html.BeginForm("GravaExperienciaProfissional", "Cadastro", null, FormMethod.Post, new { @class = "formPost" }))
        {
            <div class="form_default">
                <fieldset>
                     @Html.HiddenFor(x => x.Id)
                    <legend>Experiências Profissionais</legend>    
					
                    <p class="first">
                        <label>Cite empresas para as quais você trabalhou <span class="obs">(Exemplo: Tipo de ação: Abordagem, Troca de Brindes, Degustação etc.)</span></label>  
                    </p>			
                    <p>
                        <a href="#" id="apenddar" class="iconlink3 mg_rt fl" style="margin-left: 30px;"><img src="@Url.Content("~/Content/images/cafe/icons/small/black/plus.png")" class="mgright5" alt=""> <span>Adicionar nova experiência</span></a> 
                    </p>
                    <div class="clear"></div>
                    <div class="bloco_experiencia">
                    @foreach(var exp in Model.ExperienciasProfissionais)
                    {
                        <p class="experiencia_atual">
                            <input type="hidden" name="idExp" class="sf" value="@exp.Id">
                            <span class="fl">
                                <label>Empresa:</label>
                                <input type="text" name="empresa" class="sf" value="@exp.Empresa">
                            </span>
                            <span class="fl">
                                <label>Produto:</label>
                                <input type="text" name="produto" class="pf" value="@exp.Produto">
                            </span>
                            <span class="fl">
                                <label>Período: </label>
                                <select name="periodo1" class="pf">
                                    <option value="0">Selecione</option>
                                    @if (exp.Periodo1 == "1")
                                    {
                                        <option value="1" selected="selected">1</option>    
                                    }else{
                                        <option value="1">1</option>
                                    }
                                    @if (exp.Periodo1 == "2")
                                    {
                                        <option value="2" selected="selected">2</option>    
                                    }else{
                                        <option value="2">2</option>
                                    }
                                    @if (exp.Periodo1 == "3")
                                    {
                                        <option value="3" selected="selected">3</option>    
                                    }else{
                                        <option value="3">3</option>
                                    }
                                    @if (exp.Periodo1 == "4")
                                    {
                                        <option value="4" selected="selected">4</option>    
                                    }else{
                                        <option value="4">4</option>
                                    }
                                    @if (exp.Periodo1 == "5")
                                    {
                                        <option value="5" selected="selected">5</option>    
                                    }else{
                                        <option value="5">5</option>
                                    }
                                    @if (exp.Periodo1 == "6")
                                    {
                                        <option value="6" selected="selected">6</option>    
                                    }else{
                                        <option value="6">6</option>
                                    }
                                    @if (exp.Periodo1 == "7")
                                    {
                                        <option value="7" selected="selected">7</option>    
                                    }else{
                                        <option value="7">7</option>
                                    }
                                    @if (exp.Periodo1 == "8")
                                    {
                                        <option value="8" selected="selected">8</option>    
                                    }else{
                                        <option value="8">8</option>
                                    }
                                    @if (exp.Periodo1 == "9")
                                    {
                                        <option value="9" selected="selected">9</option>    
                                    }else{
                                        <option value="9">9</option>
                                    }
                                    @if (exp.Periodo1 == "10")
                                    {
                                        <option value="10" selected="selected">10</option>    
                                    }else{
                                        <option value="10">10</option>
                                    }
                                    @if (exp.Periodo1 == "11")
                                    {
                                        <option value="11" selected="selected">11</option>    
                                    }else{
                                        <option value="11">11</option>
                                    }
                                    @if (exp.Periodo1 == "12")
                                    {
                                        <option value="12" selected="selected">12</option>    
                                    }else{
                                        <option value="12">12</option>
                                    }
                                </select>
                            </span>
                            <span class="fl">
                                <label >Mês/Ano:</label>
                                <select name="periodo2" class="pf">
                                    <option value="">Selecione</option>
                                    @if (exp.Periodo1 == "meses")
                                    {
                                        <option value="meses" selected="selected">meses</option>
                                    }
                                    else
                                    {
                                        <option value="meses">meses</option>
                                    }
                                    @if (exp.Periodo1 == "anos")
                                    {
                                        <option value="anos" selected="selected">anos</option>
                                    }
                                    else
                                    {
                                        <option value="anos">anos</option>
                                    }
                                </select>
                            </span>
                            <span class="fl" style="margin-left: -11px;">
                                <label>Tipo de ação:</label>
                                <input type="text" name="tipoacao" class="sf" value="@exp.TipoAcao">
                            </span>
                        </p>
                    }
                    
                    </div>	
                    <div class="clear"></div>

                    <div style="display: none;">
                        <p class="experiencia">
                            <input type="hidden" name="idExp" class="sf" value="">
                            <span class="fl">
                                <label>Empresa:</label>
                                <input type="text" name="empresa" class="sf">
                            </span>
                            <span class="fl">
                                <label>Produto:</label>
                                <input type="text" name="produto" class="pf">
                            </span>
                            <span class="fl">
                                <label>Período: </label>
                                <select name="periodo1" id="periodo1" class="pf">
                                    <option value="">Selecione</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                    <option value="6">6</option>
                                    <option value="7">7</option>
                                    <option value="8">8</option>
                                    <option value="9">9</option>
                                    <option value="10">10</option>
                                    <option value="11">11</option>
                                    <option value="12">12</option>
                                </select>
                            </span>
                            <span class="fl">
                                <label >Mês/Ano:</label>
                                <select name="periodo2" id="periodo2" class="pf">
                                    <option value="">Selecione</option>
                                    <option value="meses">meses</option>
                                    <option value="anos">anos</option>
                                </select>
                            </span>
                            <span class="fl" style="margin-left: -11px;">
                                <label>Tipo de ação:</label>
                                <input type="text" name="tipoacao" class="sf">
                            </span>
                        </p>
                    </div>	

                    <!-- BOTÕES -->
                    <p style="padding-left: 566px; margin-top: 10px;">
                        <a href="@Url.Action("Segmentos", "Cadastro")" class="iconlink3 mg_rt fl"><img src="@Url.Content("~/Content/images/cafe/icons/small/black/left.png")" class="mgright5" alt=""> <span>Voltar</span></a> 
                        <a href="#voltarhome" id="submitForm" class="inline iconlink4 fl"><img src="@Url.Content("~/Content/images/cafe/icons/small/white/check.png")" class="mgright5" alt=""> <span>Finalizar</span></a>
                    </p>                   
                    <!-- BOTÕES - END -->
                    <div class="clear"></div>
                </fieldset>
            </div>
        } 	       	
		
        <div class="clear"></div>			
        <br />
					
    </div><!-- left -->            
  
    <!-- COLORBOX -->
    <div style='display:none'>
        <div id='voltarhome' style='background:#F4F4F4;'>
            <div class="modal_clearbox">
	
                <!-- CONTEUDO -->
                <div class="cont">
			
                    <!-- IMAGENS -->
                    <div class="capa">
                        <img src="@Url.Content("~/Content/images/icons/capas/check.png")"alt="" id="img2">
                    </div>
                    <!-- IMAGENS -->
				
                    <!-- TEXTOS -->
                    <div class="texto">
                        <div id="text2" style="margin-top:5px; margin-left:30px;">
                            <p>Currículo cadastrado com <strong>sucesso</strong>!</p> <br />
                            <p>Redirecionando para a página inicial.</p>
											
                        </div>					
                    </div>
                    <!-- TEXTOS - END -->
				
                    <div class="clear"></div>
                </div>
                <!-- CONTEUDO - END -->
            </div>
        </div>
    </div>
    <!-- COLORBOX - END -->
</div>

<script type="text/javascript">
    jQuery(document).ready(function () {
        
        jQuery('#submitForm').click(function () {
            jQuery('.formPost').submit();
        });
        
    });
</script>