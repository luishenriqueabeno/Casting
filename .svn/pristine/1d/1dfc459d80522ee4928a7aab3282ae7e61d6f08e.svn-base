@using Casting.Domain.enums
@model Casting.Web.Mvc.Controllers.ViewModels.CandidatoViewModel

@{
    ViewBag.Title = "Informática";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="maincontent">

    	<div class="left">
		
		<div class="etapas">
			<ul class="formacao">
				<li class="etapa1 ok"></li>
				<li class="etapa2 on"></li>
				<li class="etapa3"></li>
			</ul>
			<div class="clear"></div>
		</div>   
            
         <div class="clear"></div>
		
        @using (Html.BeginForm("GravaInformatica", "Cadastro", null, FormMethod.Post, new { @class = "formPost" }))
        {
        	<div class="form_default">
                <fieldset>
                    @Html.HiddenFor(x => x.Id)
                    <legend>Informática</legend>    
					
						<div class="clear"></div>
                    
                    <p><label class="fl">
                           @Html.CheckBoxFor(x => x.ConhecimentoWord, new { @checked = Model.ConhecimentoWord }) Word
                       </label> 
                        <select name="WordNivelConhecimento" id="WordNivelConhecimento" class = "fl optinformatica" style="margin-top:0; margin-left:66px;">
                            <option selected="selected" value="0">Selecione</option> 
                            @if (@Model.WordNivelConhecimento == NivelConhecimento.Básico)
                            {
                                <option selected="selected" value="@NivelConhecimento.Básico">Básico</option>    
                            }
                            else
                            {
                                <option value="@NivelConhecimento.Básico">Básico</option>    
                            }
                            @if (@Model.WordNivelConhecimento == NivelConhecimento.Intermediário)
                            {
                                <option selected="selected" value="@NivelConhecimento.Intermediário">Intermediário</option> 
                            }
                            else
                            {
                                <option value="@NivelConhecimento.Intermediário" >Intermediário</option>
                            }
                            @if (@Model.WordNivelConhecimento == NivelConhecimento.Avançado)
                            {
                                <option selected="selected" value="@NivelConhecimento.Avançado">Avançado</option>
                            }
                            else
                            {
                                <option value="@NivelConhecimento.Avançado">Avançado</option>
                            }
                        </select>
                        <div class="clear"></div>
						</p>
						<p><label class="fl">@Html.CheckBoxFor(x => x.ConhecimentoExcel, new { @checked = Model.ConhecimentoExcel }) Excel</label>
						    <select name="ExcelNivelConhecimento" id="ExcelNivelConhecimento" class = "fl optinformatica" style="margin-top:0; margin-left:69px;">
                                <option selected="selected" value="0">Selecione</option> 
                                @if (@Model.ExcelNivelConhecimento == NivelConhecimento.Básico)
                                {
                                    <option selected="selected" value="@NivelConhecimento.Básico">Básico</option>    
                                }
                                else
                                {
                                    <option value="@NivelConhecimento.Básico">Básico</option>    
                                }
                                @if (@Model.ExcelNivelConhecimento == NivelConhecimento.Intermediário)
                                {
                                    <option selected="selected" value="@NivelConhecimento.Intermediário">Intermediário</option> 
                                }
                                else
                                {
                                    <option value="@NivelConhecimento.Intermediário" >Intermediário</option>
                                }
                                @if (@Model.ExcelNivelConhecimento == NivelConhecimento.Avançado)
                                {
                                    <option selected="selected" value="@NivelConhecimento.Avançado">Avançado</option>
                                }
                                else
                                {
                                    <option value="@NivelConhecimento.Avançado">Avançado</option>
                                }
                            </select>	
                            <div class="clear"></div>
						</p>
						<p><label class="fl">@Html.CheckBoxFor(x => x.ConhecimentoPowerPoint, new { @checked = Model.ConhecimentoPowerPoint }) Power Point</label>
						    <select name="PowerPointNivelConhecimento" id="PowerPointNivelConhecimento" class = "fl optinformatica" style = "margin-top:0; margin-left:31px;" >
                                <option selected="selected" value="0">Selecione</option> 
                                @if (@Model.PowerPointNivelConhecimento == NivelConhecimento.Básico)
                                {
                                    <option selected="selected" value="@NivelConhecimento.Básico">Básico</option>    
                                }
                                else
                                {
                                    <option value="@NivelConhecimento.Básico">Básico</option>    
                                }
                                @if (@Model.PowerPointNivelConhecimento == NivelConhecimento.Intermediário)
                                {
                                    <option selected="selected" value="@NivelConhecimento.Intermediário">Intermediário</option> 
                                }
                                else
                                {
                                    <option value="@NivelConhecimento.Intermediário" >Intermediário</option>
                                }
                                @if (@Model.PowerPointNivelConhecimento == NivelConhecimento.Avançado)
                                {
                                    <option selected="selected" value="@NivelConhecimento.Avançado">Avançado</option>
                                }
                                else
                                {
                                    <option value="@NivelConhecimento.Avançado">Avançado</option>
                                }
                            </select>	
							<div class="clear"></div>	
						</p>
						<p><label class="fl">@Html.CheckBoxFor(x => x.ConhecimentoAccess, new { @checked = Model.ConhecimentoAccess }) Access</label>
						    <select name="AccessNivelConhecimento" id="AccessNivelConhecimento" class = "fl optinformatica" style = "margin-top:0; margin-left:61px;" >
                                <option selected="selected" value="0">Selecione</option> 
                                @if (@Model.AccessNivelConhecimento == NivelConhecimento.Básico)
                                {
                                    <option selected="selected" value="@NivelConhecimento.Básico">Básico</option>    
                                }
                                else
                                {
                                    <option value="@NivelConhecimento.Básico">Básico</option>    
                                }
                                @if (@Model.AccessNivelConhecimento == NivelConhecimento.Intermediário)
                                {
                                    <option selected="selected" value="@NivelConhecimento.Intermediário">Intermediário</option> 
                                }
                                else
                                {
                                    <option value="@NivelConhecimento.Intermediário" >Intermediário</option>
                                }
                                @if (@Model.AccessNivelConhecimento == NivelConhecimento.Avançado)
                                {
                                    <option selected="selected" value="@NivelConhecimento.Avançado">Avançado</option>
                                }
                                else
                                {
                                    <option value="@NivelConhecimento.Avançado">Avançado</option>
                                }
                            </select>
							<div class="clear"></div>	
						</p>
						<p><label class="fl">@Html.CheckBoxFor(x => x.ConhecimentoInternet, new { @checked = Model.ConhecimentoInternet }) Internet</label>
                            <select name="InternetNivelConhecimento" id="InternetNivelConhecimento" class = "fl optinformatica" style = "margin-top:0; margin-left:53px;" >
                                <option selected="selected" value="0">Selecione</option> 
                                @if (@Model.InternetNivelConhecimento == NivelConhecimento.Básico)
                                {
